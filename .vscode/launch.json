{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch localhost",
            "url": "http://localhost:4004",
            "webRoot": "${workspaceFolder}/",
            "runtimeArgs": ["--user-data-dir=${workspaceFolder}/.vscode/chrome"],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**"
            ]
        }
    ]
  }
